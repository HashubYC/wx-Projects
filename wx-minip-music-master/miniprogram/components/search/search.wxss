.container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.search-bar {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 34rpx;
  background: #f5f5f5;
  padding-left: 54rpx;
  margin-right: 25rpx;
}

.search-btn {
  color: #fff;
  background: #d81e06;
  font-size: 24rpx;
  width: 80rpx;
  border-radius: 40rpx;
}

.bar-style {
  color: #999;
}

.find {
  position: absolute;
  top: 50%;
  transform: translate(16rpx, -50%);
  color: #999;
}